\ProvidesPackage{psu-colors}
\RequirePackage{xcolor}

% All PSU colors are defined in terms of cmyk
% See https://www.pdx.edu/university-communications/tools-and-templates/brand-colors
\selectcolormodel{cmyk}

% Define a color in terms of cmyk from 0-255 to 0-1
\def\defineCMYKcolor(#1,#2,#3,#4)#5{%
    \pgfmathsetmacro{\myc}{#1/255}%
    \pgfmathsetmacro{\mym}{#2/255}%
    \pgfmathsetmacro{\myy}{#3/255}%
    \pgfmathsetmacro{\myk}{#4/255}%
    \definecolor{#5}{cmyk}{\myc,\mym,\myy,\myk}%
}

